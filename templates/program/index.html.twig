{% extends 'base.html.twig' %}


{% block title %}All programs
{% endblock %}


{% block body %}

    <h1>Toutes les séries de la table program :
    </h1>
    <div class="row m-3">
        {% for program in programs %}

            <div class="col-sm-3">
                <div class="card text-center">
                    <div class="card-header">
                        {{ loop.index }}
                        /
                        {{ program.title }}
                    </div>
                    <div class="card-body">
                        <img src="{{ program.poster }}" class="card-img-top">
                        <p class="card-text">Catégorie :
                            {{ program.category.name }}</p>
                        <p class="card-text">{{ program.summary }}</p>
                        <a href="{{ path("program_show", {'slug': program.slug }) }}" class="btn btn-primary">Voir la fiche</a>
                    </div>
                </div>
            </div>

        {% else %}
            Aucune série trouvée.
        {% endfor %}
    </div>

    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}
