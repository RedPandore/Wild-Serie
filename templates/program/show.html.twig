{% extends 'base.html.twig' %}

{% block title %}Série #{{ program.id }}{% endblock %}


{% block body %}
<div class= "container">
<div class="card" style="width: 18rem;">
  <img class="card-img-top" src="{{program.poster}}" alt="{{ program.title }} poster">
  <div class="card-body">
    <h5 class="card-title">{{ program.title }}</h5>
    <p class="card-text">{{ program.summary }}</p>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item"><p>Catégorie : {{ program.category.name }}</p></li>
  </ul>
  <div class="card-body">
    <a href="{{ path('program_index') }}" class="card-link">Retour à la liste des programmes</a>
  </div>
</div>
</div>
{% endblock %}