{% extends 'base.html.twig' %}

{% block title %}Série #{{ program.id }}
{% endblock %}


{% block body %}
	<div class="container">
		<div class="card mx-auto" style="width: 18rem;">
			<img class="card-img-top" src="{{program.poster}}" alt="{{ program.title }}">
			<div class="card-body">
				<h5 class="card-title">{{ program.title }}</h5>
				<p class="card-text">{{ program.summary }}</p>
			</div>
			<ul class="list-group list-group-flush">
				<li class="list-group-item">
					<p>Catégorie :
						{{ program.category.name }}</p>
				</li>
			</ul>
			<ul class="list-group list-group-flush">
				{% for season in seasons %}
					<a href="/programs/{{ program.id }}/season/{{ season.id }}">
						<li class="list-group-item">Saison :
							{{ season.number }}</li>
					</a>
				{% endfor  %}
			</ul>
			<div class="card-body">
				<a href="{{ path('program_index') }}" class="card-link">Retour à la liste des programmes</a>
			</div>
		</div>
	</div>
{% endblock %}
