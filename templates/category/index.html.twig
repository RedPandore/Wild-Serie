{% extends 'base.html.twig' %}


{% block title %}All Categories
{% endblock %}


{% block body %}

	<h1>Toutes les catégories de la table category :
	</h1>

{% for category in categories %}

<div class="card w-75">
  <div class="card-body">
    <h5 class="card-title">{{ loop.index }} / {{ category.name }}</h5>
    <a href="{{ path("category_show", { categoryName: category.name }) }}" class="btn btn-primary">Voir la fiche</a>
  </div>
</div>

	{% else %}
		Aucune category trouvée.
	{% endfor %}

</br>
	<a href="{{ path('app_index') }}">
		Retour à l'accueil
	</a>
{% endblock %}
