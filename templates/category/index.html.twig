{% extends 'base.html.twig' %}


{% block title %}All Categories
{% endblock %}


{% block body %}

	<h1>Toutes les catégories de la table category :
	</h1>

{% for category in categories %}

        <div>
            <h2>{{ loop.index }} / {{ category.name }} -
        </div>
<a href="{{ path("category_show", { categoryName: category.name }) }}">Voir la fiche</a> 
	{% else %}
		Aucune category trouvée.
	{% endfor %}

</br>
	<a href="{{ path('app_index') }}">
		Retour à l'accueil
	</a>
{% endblock %}
