{% extends 'base.html.twig' %}


{% block title %}All Categories
{% endblock %}


{% block body %}

	<h1>Toutes les programmes d'une catégorie :
	</h1>

        {% for program in programs %}

        <div>
            <h2>{{ program.id }} / {{ program.title }}</h2>
            <p>{{ program.summary }}</p>
            {# Lien vers la fiche de la série : #}
            <a href="{{ path("program_show", { id: program.id }) }}">Voir la fiche</a>
        </div>

	{% else %}
		Aucune série trouvée.
	{% endfor %}


	<a href="{{ path('app_index') }}">
		Retour à l'accueil
	</a>
{% endblock %}